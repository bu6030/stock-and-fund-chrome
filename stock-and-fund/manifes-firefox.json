{
  "manifest_version": 2,
  "version": "2.1.6",
  "name": "股票基金神器",
  "description": "上班族都安装了，实时监控股票价格，角标提醒，终身免费，股票基金神器，实时盯盘，A股美股港股。",
  "browser_action": {
    "default_title": "股票基金神器",
    "default_popup": "popup.html",
    "default_icon" : "img/128.png"
  },
  "background": {
    "scripts" : [
      "js/background.js"
    ]
  },
  "permissions": [
    "storage",
    "notifications",
    "http://*.gtimg.cn/*",
    "https://*.gtimg.cn/*",
    "http://*.eastmoney.com/*",
    "https://*.eastmoney.com/*"
  ],
  "content_scripts": [
    {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["js/onload.js"],
        "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
